
{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .title{  color:#fff; text-align:center; margin-top: 60px; background: #005c96; border: 1px solid #005c96; border-radius: 50px; padding: 20px;  }
     h2{ text-align:center; margin-bottom:100px; margin-top:70px;}

</style>


  <h2>{{ title|upper }}</h2>

<div class="container">
  {{ form_start(formRegister) }}

  {{ form_row(formRegister.firstname) }}
  {{ form_row(formRegister.lastname) }}
  {{ form_row(formRegister.login) }}
  {{ form_row(formRegister.plainPassword) }}
  {{ form_row(formRegister.email) }}
  {{ form_row(formRegister.langue) }}
  {{ form_row(formRegister.agreeTerms) }}

  {{ form_end(formRegister) }}
</div>
  {% for error in errors %}
      <p class="alert alert-danger">{{ error.message }}</p>
  {% endfor %}

{% endblock %}
