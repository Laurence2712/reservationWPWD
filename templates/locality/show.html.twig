{% extends 'base.html.twig' %}

{% block title %}Locality{% endblock %}

{% block body %}
    <h1>{{ locality.postalCode }} {{ locality.locality }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ locality.id }}</td>
            </tr>
            <tr>
                <th>Postal_code</th>
                <td>{{ locality.postalCode }}</td>
            </tr>
            <tr>
                <th>Locality</th>
                <td>{{ locality.locality }}</td>
            </tr>
            <ul>
            {% for location in locality.locations %}
                <li>{{ location.designation }}</li>
            {% endfor %}
            </ul>
        </tbody>
    </table>

    <a href="{{ path('locality_index') }}">back to list</a>

    <a href="{{ path('locality_edit', {'id': locality.id}) }}">edit</a>

    {{ include('locality/_delete_form.html.twig') }}
{% endblock %}
