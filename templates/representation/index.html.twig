{% extends 'base.html.twig' %}

{% block title %}Hello RepresentationController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des {{ resource }}! âœ…</h1>

  
    <ul>
    {% for representation in representations %}
        <li>{{ representation.theShow.title }}
        {% if representation.theLocation %}
        - <span>{{ representation.theLocation.designation }}</span>
        {% endif %}
        - <datetime>{{ representation.schedule|date('d-m-Y H:i')}}</datetime>
        </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
