
{% extends 'base.html.twig' %}

{% block title %}Liste des représentations{% endblock %}

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .title{  color:#fff; text-align:center; margin-top: 60px; background: #005c96; border: 1px solid #005c96; border-radius: 50px; padding: 20px;  }
     h1{ text-align:center; text-decoration: underline;}
     .titleTab{color:#17a2b8;}
    
</style>

  <h1>Liste des {{ resource }}</h1>
<div class="container">
  <table class="table table-striped table-bordered" style="width:100%"  id="myTable">
      <thead>
        <tr>
          <th class="titleTab">Représentations</th>
          <th class="titleTab">Lieux</th>
          <th class="titleTab">Dates et heures</th>
        </tr>
        </thead>
        <tbody>
          {% for representation in representations %}
          <tr>
            <td>{{ representation.theShow.title }}</td>
              {% if representation.theLocation %}

            <td>{{ representation.theLocation.designation }}</td>
            {% else %}
            <td>/</td>
              {% endif %}
          <td><datetime>{{ representation.schedule|date('d-m-Y H:i') }}</datetime></td>
        </tr>
          {% endfor %}
        </tbody>
            <tfoot>
              <tr>
                <th class="titleTab">Représentations</th>
                <th class="titleTab">Lieux</th>
                <th class="titleTab">Dates et heures</th>
              </tr>
            </tfoot>
    </table>
</div>
{% endblock %}
