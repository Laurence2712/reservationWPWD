{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .tableau {margin-top: 100px;}
     h1{ text-align:center; }
     h5{ text-align:center; margin-bottom:20px; }
     .editProfil{text-align:center;  display:block; margin:auto; max-width:150px;}
     .editProfil a, .new a{color:#fff; text-decoration:none;}
     .new{max-width:300px; text-align:center;  display:block; margin:auto;margin-top:20px;}
     .table{max-width:400px; margin:auto;}

</style>

<div class="container">
    <h1>Profil</h1>
    <h5>Bienvenue {{app.user.firstname}}</h5>

    <table class="table">
        <tbody>

            <tr>
                <th>Nom d'utilisateur</th>
                <td>{{ user.login }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Pr√©nom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Langue</th>
                <td>{{ user.langue }}</td>
            </tr>
        </tbody>
    </table>
</div>
<p class="editProfil btn btn-lg btn-primary"><a href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a></p>
<!--<p class="new btn btn-warning"><a href="{{ path('user_new') }}">Nouvel utilisateur</a></p>-->


{% endblock %}
