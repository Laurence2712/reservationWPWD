{% extends 'base.html.twig' %}

{% block title %}Votre réservation{% endblock %}

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .title{  color:#fff; text-align:center; margin-top: 60px; background: #005c96; border: 1px solid #005c96; border-radius: 50px; padding: 20px;  }
     h1{ text-align:center; margin-bottom:100px; margin-top:70px;}
</style>

    <h1>Votre réservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Spectacle</th>
                <td>{{ reservation.representation.theShow.title }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ reservation.representation.schedule|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ reservation.representation.schedule|date('H:i') }}</td>
            </tr>
            <tr>
                <th>Places</th>
                <td>{{ reservation.places }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reservation_index') }}">Retour à la liste des réservations</a>

    <p><a href="{{ path('reservation_edit', {'id': reservation.id}) }}">Modifier</a></p>
    <p class="new newPay alert alert-primary"><a href="{{ path('reservation_pay', {'id': reservation.id}) }}">Payer</a></p>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
