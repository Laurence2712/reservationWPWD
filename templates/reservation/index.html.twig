{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    .title{  color:#fff; text-align:center; margin-top: 60px; background: #005c96; border: 1px solid #005c96; border-radius: 50px; padding: 20px;  }
     h1{ text-align:center; margin-bottom:100px; margin-top:70px;}
     .new{ text-align:center; border:1px solid blue; max-width:220px; display:block; margin:auto;}
     .new a{text-decoration:none;}
     .newPay{ margin-top: 20px;}

</style>

    <h1>Liste des réservations</h1>

    <ul>
        {% for groups in reservations %}
            <li>
                <ul>{{ groups.0.user.firstname }} {{ groups.0.user.lastname }}
                {% for reservation in groups %}
                    <li>
                        <span>{{ reservation.representation.theShow.title }}</span> ({{ reservation.places }} places)
                        <a href="{{ path('reservation_show', {'id': reservation.id}) }}">Voir</a>
                        <a href="{{ path('reservation_edit', {'id': reservation.id}) }}">Modifier</a>
                    </li>
                {% endfor %}
                </ul>
            </li>
        {% else %}
            <li>no records found</li>
        {% endfor %}
    </ul>

<hr>

    <table class="table table-striped table-bordered" style="width:100%">

      <thead>

      <tr>
        <th>Nom</th>
        <th>Représentations</th>
        <th>Nombre de places réservées</th>
        <th>Accès à votre réservation</th>
      </tr>
      </thead>
      <tbody>
      {% for groups in reservations %}
      <tr>
          <td>{{ groups.0.user.firstname }} {{ groups.0.user.lastname }}</td>
          {% for reservation in groups %}
              <td>
                  <span>{{ reservation.representation.theShow.title }}</span>
              </td>
              <td>
                 {{ reservation.places }} places
              </td>
              <td><a href="{{ path('reservation_show', {'id': reservation.id}) }}">Voir</a></td>
              <td><a href="{{ path('reservation_edit', {'id': reservation.id}) }}">Modifier</a></td>
          {% endfor %}
        </tr>
      {% endfor %}
      </tbody>
      <tfoot>
       <tr>
          <th>Nom</th>
          <th>Représentation</th>
          <th>Nombre de places réservées</th>
        </tr>

      </tfoot>


    </table>


<p class="new alert alert-primary"><a href="{{ path('reservation_new') }}">Nouvelle réservation</a></p>

{% endblock %}
